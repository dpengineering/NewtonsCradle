<MainScreen>:    #start scene with a button and label
    name: 'main'
    FloatLayout:
        size_hint: None, None  #Needed to be able to define define height and width of widgets
        ################# TITLE #################
        Label:
            center_x: root.center_x
            center_y: root.center_y + 470
            text: "Newton's Cradle"
            color: 0,0,0,1
            font_size: 80
            
        ################# SCOOP LABELS #################    
        Label:
            id: leftScooperLabel
            center_x: root.center_x
            center_y: root.center_y * .75
            text: 'Control Left Scooper'
            color: 0,255,255,.65
            font_size: 65
        Label:
            id: rightScooperLabel
            center_x: root.center_x 
            center_y: root.center_y * 1.25
            text: 'Control Right Scooper'
            color: 0,255,255,.65
            font_size: 65
            
        ################# BALLS #################          
		
		Image:
			source: 'ball.png'
			id: ballOne
			keep_ratio: True
			allow_stretch: False
			size_hint: None, None
			size: 200, 200
			center_x: root.center_x - 400
			center_y: root.center_y + 300
		Image:
			source: 'ball.png'
			id: ballTwo
			keep_ratio: True
			allow_stretch: False
			size_hint: None, None
			size: 200, 200
			center_x: root.center_x - 200
			center_y: root.center_y + 300
		Image:
			source: 'ball.png'
			id: ballThree
			keep_ratio: True
			allow_stretch: False
			size_hint: None, None
			size: 200, 200
			center_x: root.center_x 
			center_y: root.center_y + 300
		Image:
			source: 'ball.png'
			id: ballFour
			keep_ratio: True
			allow_stretch: False
			size_hint: None, None
			size: 200, 200
			center_x: root.center_x + 200
			center_y: root.center_y + 300
		Image:
			source: 'ball.png'
			id: ballFive
			keep_ratio: True
			allow_stretch: False
			size_hint: None, None
			size: 200, 200
			center_x: root.center_x + 400
			center_y: root.center_y + 300
            
        ### BALL SLIDERS ###

		Slider: #RIGHT SCOOPER
			id: rightScooperSlider
			orientation: 'horizontal'
			min: 0
			max: 5
			value: 5
			step: 1
			x: root.width * 0.235
			y: root.height * 0.5
			size_hint_x: 10
			on_value: root.rightScooperSliderChange(self.value)

		Slider: #LEFT SCOOPER
			id: leftScooperSlider
			orientation: 'horizontal'
			min: 0
			max: 5
			value: 0
			step: 1
			x: root.width * 0.235
			y: root.height * 0.4
			size_hint_x: 10
			on_value: root.leftScooperSliderChange(self.value)
			
        ################# EXECUTE #################    
        DPEAButton:
            size_hint: None,None
            text: 'SCOOP!'
            font_size: 50
            size: 400, 150
            background_color: .6, 0, 0, 1
            center: 950, 250
            on_release: root.scoopCallback()
            
        DPEAButton:
            size_hint: None,None
            text: 'STOP BALLS'
            font_size: 50
            size: 400, 150
            background_color: .6, 0, 0, 1
            center: 1650, 100
            on_release: root.stopBallsCallback()
            
        ################# QUIT #################    
        DPEAButton:
            size_hint: None,None                # Need to copy these three lines
            background_color: 0, 0, 0, 0        # of code to get rid of grey corners
            background_normal: ''               # and be able to set the size
            size_hint: None,None
            text: 'Quit'
            font_size: 50
            size: 400, 150
            color: 1,0,0,.3
            center: 150, 100
            on_release: root.exitProgram()
