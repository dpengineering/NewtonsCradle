<MainScreen>:    #start scene with a button and label
    name: 'main'
    FloatLayout:
        size_hint: None, None  #Needed to be able to define define height and width of widgets
        ################# TITLE #################
        Label:
            center_x: root.center_x
            center_y: root.center_y + 300
            text: "Newton's Cradle"
            color: 0,0,0,1
            font_size: 70
            
        ################# SCOOP LABELS #################    
        Label:
            id: leftScooperLabel
            center_x: root.center_x
            center_y: root.center_y * .55
            text: 'Control Left Scooper'
            color: 0,0,0,1     #0,255,255,.65
            font_size: 45
        Label:
            id: rightScooperLabel
            center_x: root.center_x 
            center_y: root.center_y * 1.03
            text: 'Control Right Scooper'
            color: 0,0,0,1
            font_size: 45
            
        ################# BALLS #################          
		
		Image:
			source: 'Kivy/ball.png'
			id: ballOne
			keep_ratio: True
			allow_stretch: False
			size_hint: None, None
			size: 175, 175
			center_x: root.center_x - 350
			center_y: root.center_y + 150
		Image:
			source: 'Kivy/ball.png'
			id: ballTwo
			keep_ratio: True
			allow_stretch: False
			size_hint: None, None
			size: 175, 175
			center_x: root.center_x - 175
			center_y: root.center_y + 150
		Image:
			source: 'Kivy/ball.png'
			id: ballThree
			keep_ratio: True
			allow_stretch: False
			size_hint: None, None
			size: 175, 175
			center_x: root.center_x 
			center_y: root.center_y + 150
		Image:
			source: 'Kivy/ball.png'
			id: ballFour
			keep_ratio: True
			allow_stretch: False
			size_hint: None, None
			size: 175, 175
			center_x: root.center_x + 175
			center_y: root.center_y + 150
		Image:
			source: 'Kivy/ball.png'
			id: ballFive
			keep_ratio: True
			allow_stretch: False
			size_hint: None, None
			size: 175, 175
			center_x: root.center_x + 350
			center_y: root.center_y + 150
            
        ################# BALL SLIDERS ##################

		Slider: #RIGHT SCOOPER
			id: rightScooperSlider
			orientation: 'horizontal'
			min: 0
			max: 4
			value: 4
			step: 1
			center_x: root.center_x + 82
			y: root.height * 0.38
			size_hint_x: 7.2
			on_value: root.rightScooperSliderChange(self.value)

		Slider: #LEFT SCOOPER
			id: leftScooperSlider
			orientation: 'horizontal'
			min: 0
			max: 4
			value: 0
			step: 1
			center_x: root.center_x - 88
			y: root.height * 0.3
			size_hint_x: 7.2
			on_value: root.leftScooperSliderChange(self.value)
			
        ################# EXECUTE #################    
        DPEAButton:
            size_hint: None,None
            text: 'SCOOP!'
            size: 400, 150
            background_color: .6, 0, 0, 1
            x: root.width * 0.35
			y: root.height * 0.05
            on_release: root.scoopCallback()
            
        ################# ADMIN #################   
        DPEAButton:
            size_hint: None,None
            text: 'Admin'
            size: 75, 75
            background_color: .6, 0, 0, 1
            x: root.width * 0.03
			y: root.height * 0.03
            on_release: root.adminAction()

<quitScreen>:    #start scene with a button and label
    name: 'quitScreen'
    FloatLayout:
        size_hint: None, None
        
        DPEAButton:
            size_hint: None,None
            text: 'Quit'
            size: 400, 150
            background_color: .6, 0, 0, 1
            center_x: root.width * .50 
			center_y: root.height * .50
            on_release: root.quitAction()
